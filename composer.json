{
    "name": "shopify/shopify-api",
    "description": "Shopify Admin API Library for PHP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "shopify",
        "node",
        "jwt",
        "app",
        "graphql",
        "rest",
        "webhook",
        "Admin API"
    ],
    "authors": [
        {
            "name": "Shopify Inc.",
            "email": "dev-tools-education@shopify.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shopify\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test_coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text",
        "lint": "./vendor/bin/phpcs --standard=PSR12 src"
    }
}
